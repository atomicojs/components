{
  "name": "@atomico/components",
  "description": "Generic and utility webcomponents created with Atomico",
  "version": "1.6.0",
  "type": "module",
  "workspaces": [
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "vite --force",
    "build": "vite build",
    "test": "vitest ",
    "prepublishOnly": "npm run test && npm run exports"
  },
  "dependencies": {
    "@atomico/hooks": "^3.42.1",
    "@atomico/router": "^1.2.0",
    "atomico": "^1.59.0"
  },
  "devDependencies": {
    "@atomico/exports": "^0.30.0",
    "@atomico/plugin-vite": "latest",
    "@atomico/postcss-tokens": "^1.3.0",
    "typescript": "^4.6.3",
    "vite": "2.8",
    "vitest": "^0.9.4"
  },
  "postcss": {
    "plugins": {
      "@atomico/postcss-tokens": {}
    }
  }
}
