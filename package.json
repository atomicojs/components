{
  "name": "@atomico/components",
  "description": "Generic and utility webcomponents created with Atomico",
  "version": "1.6.0",
  "type": "module",
  "workspaces": [
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "vite --force",
    "exports": "exports src/*/*.{js,jsx} --exports --types",
    "test": "wtr src/**/*.test.js --node-resolve",
    "prepublishOnly": "npm run test && npm run exports"
  },
  "dependencies": {
    "@atomico/hooks": "^3.40.0",
    "atomico": "^1.59.0"
  },
  "devDependencies": {
    "@atomico/exports": "^0.27.0",
    "@atomico/plugin-vite": "^1.1.1",
    "typescript": "^4.6.3",
    "vite": "latest",
    "vitest": "^0.9.4"
  }
}
